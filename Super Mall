let shops = [];

function addShop() {
  const name = document.getElementById("shopName").value;
  const location = document.getElementById("shopLocation").value;

  if (name && location) {
    const shop = { name, location, products: [], offers: [] };
    shops.push(shop);
    displayShops();
    document.getElementById("shopName").value = "";
    document.getElementById("shopLocation").value = "";
  }
}

function displayShops() {
  const shopList = document.getElementById("shops");
  shopList.innerHTML = "";

  shops.forEach((shop, index) => {
    const li = document.createElement("li");
    li.innerHTML = `
      <strong>${shop.name}</strong> - ${shop.location}
      <button onclick="addOffer(${index})">Add Offer</button>
      <button onclick="addProduct(${index})">Add Product</button>
    `;
    shopList.appendChild(li);
  });
}

function addOffer(index) {
  const offer = prompt("Enter offer for " + shops[index].name);
  if (offer) {
    shops[index].offers.push(offer);
    alert("Offer added!");
  }
}

function addProduct(index) {
  const product = prompt("Enter product for " + shops[index].name);
  if (product) {
    shops[index].products.push(product);
    alert("Product added!");
  }
}
